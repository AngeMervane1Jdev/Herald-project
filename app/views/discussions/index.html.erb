<p id="notice"><%= notice %></p>

<h1>Discusses</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Titre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discuss| %>
      <tr>
        <td><%= discuss.type %></td>
        <td><%= discuss.titre %></td>
        <td><%= link_to 'Show', discussion %></td>
        <td><%= link_to 'Edit', edit_discussion_path(discussion) %></td>
        <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Discuss', new_discussion_path %>
