<!DOCTYPE html>
<html>
  <head>
    <title>HeraldApp</title>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>


      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.5/waypoints.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  </head>

  <style>

        @media(max-width: 800px) {
        .btn-menu-1{
        width: 100%;
        /* display: none; */
  }
  }
    </style>


<body class=" sidebar-right header-style-2 topbar-style-1 menu-has-search header-fixed">

<div id="wrapper" class="animsition">
    <div id="page" >
        <!-- Header Wrap -->
        <div id="site-header-wrap" class="fixed-top">
            <!-- Top Bar -->       

            <!-- Header -->
            <header id="site-header" >
                <div id="site-header-inner" class="container">                    
                    <div class="wrap-inner clearfix">
                        <div id="site-logo" class="clearfix">
                            <div id="site-logo-inner">
                                <a href="index.html" rel="home" class="main-logo" >
                                    <img class="logo" src="/img/logo.png" alt="HEZingboxRALD" data-retina="/img/logo.png" >
                                </a>
                            </div>
                        </div><!-- /#site-logo -->

                        <div class="mobile-button">
                            <span></span>
                        </div>
                    
                    
                        <nav id="main-nav" class="main-nav">
                            <ul id="menu-primary-menu" class="menu">
                                 <li class="menu-item">
                                    <a class="active" href="<%=root_path%>">Acceuil</a>
                                   
                                </li>
                            <% if controller_name=="home" %>
                               
                                <li class="menu-item menu-item-has-children">
                                    <a class="" href="#">About Us</a>
                                   
                                </li>
                                <li class="menu-item menu-item-has-children">
                                    <a class="" href="#service">Services</a>
                                    
                                </li>

                                <li class="menu-item menu-item-has-children">
                                    <a href="#contact">Contact</a>
                                </li>
                               <% if !current_user.present? and !current_assistant.present? %>

                                    <li class="menu-item menu-item-has-children" >
                                        <a class="btn btn-menu" href="#" >Mon Compte <i class="fa fa-chevron-down" aria-hidden="true"></i></a>
                                        <ul class="sub-menu">
                                            <li class="menu-item"><a href="<%=new_user_session_path%>">Utilisateur</a></li>
                                            <li class="menu-item"><a href="<%=new_assistant_session_path%>">Assistant</a></li>
                                        </ul>
                                    </li>
                                
                                    
                                    <li class="menu-item menu-item-has-children" >
                                        <a class="btn btn-menu-1" href="<%=new_user_registration_path%>" style="background-color: rgb(44, 44, 202);;color:white;">M'inscrire</a>  
                                    </li>



                                    
                                    
                                <% elsif current_user.present? and current_user.pme!=nil%>

                                    <li class="menu-item menu-item-has-children" >
                                       <a class="btn btn-menu-1" href="<%=user_dashboard_path%>" style="background-color: rgb(44, 44, 202);;color:white;">Mon profil</a>  
                                    </li>

                                <% elsif current_assistant.present?%>
                                    
                                    <li class="menu-item menu-item-has-children" >
                                       <a class="btn btn-menu-1" href="<%=assistant_dashboard_path%>" style="background-color: rgb(44, 44, 202);;color:white;">Mes Discussons</a>  
                                    </li>
                                

                                <% end %>
                                
                            <% end %>
                             <% if current_user.present? %>
                                   <li class="menu-item menu-item-has-children" >
                                       <a class="btn btn-danger btn-menu-1 text-light" href="<%=destroy_user_session_path%>" method="delete" style="background-color: rgb(44, 44, 202);;color:white;">Déconnexion</a>  
                                    </li>
                             <% end %>
                          
                            <% if current_assistant.present? %>
                                     <li class="menu-item menu-item-has-children" >
                                     <%= link_to 'Déconnexion', destroy_assistant_session_path, class: 'btn btn-danger btn-menu-1 text-light' ,method:"delete"%>
                                    </li>
                             <% end %>
                          

                            
                            </ul>
                        </nav><!-- /#main-nav -->
  
                    </div><!-- /.wrap-inner -->                    
                </div><!-- /#site-header-inner -->
            </header><!-- /#site-header -->
        </div><!-- #site-header-wrap -->

   
    <%= render partial:'/layouts/flash',locals:{flash:flash} %>
    <div  style="margin-top:100px">
    <%= yield %>
    </div> 
        <!-- Bottom -->
        <div id="bottom" class="bottom-style-2">
            <div id="bottom-bar-inner" class="container">
                <div class="bottom-bar-inner-wrap">
                    <ul class="bottom-bar-content">
                        <li><a href=" ">© Herald 2021 </a>| </li>
                        <li> <a href=""> All Rights Reserved</a></li>
                    </ul><!-- /.bottom-bar-content -->
                </div><!-- /.bottom-bar-inner-wrap -->                
            </div><!-- /#bottom-bar-inner -->
        </div><!-- /#bottom -->
   </div>
</div>
   
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</html>

