<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="/images/assistant.png"><span class="font-weight-bold"><%=current_user.name%></span><span class="text-black-50"><%=current_user.email%></span><span> </span></div>
                <% if @discussions.count==1 %>
                    <% if @discussions.first.category=='fiscale' %>
                           <div class="text-center mt-3"><%= link_to 'Discussion fiscale',discussion_path(@discussions.first.id), class:"btn btn-primary profile-button text-light" %></div>
                           <div class="text-center mt-3"><%= link_to 'Discussion juridique',create_discussion_path("fiscale"), class:"btn btn-primary profile-button text-light" %></div>   

                    <% else %>
                           <div class="text-center mt-3"><%= link_to 'Discussion juridique',discussion_path(@discussions.first.id), class:"btn btn-primary profile-button text-light" %></div>   
                           <div class="text-center mt-3"><%= link_to 'Discussion fiscale',create_discussion_path("fiscale"), class:"btn btn-primary profile-button text-light" %></div>   

                    <% end %>
                <% elsif @discussions.count==2 %>

                       <% if @discussions.first.category=='fiscale' %>
                            <div class="text-center mt-3"><%= link_to 'Discussion fiscale',discussion_path(@discussions.first.id), class:"btn btn-primary profile-button text-light" %></div>
                        <% else %>
                            <div class="text-center mt-3"><%= link_to 'Discussion juridique',discussion_path(@discussions.first.id), class:"btn btn-primary profile-button text-light" %></div>
                       <% end %>  

                        <% if @discussions.last.category=='juridique' %>
                             <div class="text-center mt-3"><%= link_to 'Discussion juridique',discussion_path(@discussions.last.id), class:"btn btn-primary profile-button text-light" %></div>
                        <% else %>
                             <div class="text-center mt-3"><%= link_to 'Discussion fiscale',discussion_path(@discussions.last.id), class:"btn btn-primary profile-button text-light" %></div>
                       <% end %>   
                <% else %>
                     <div class="text-center mt-3"><%= link_to 'Discussion juridique',create_discussion_path('juridique'), class:"btn btn-primary profile-button text-light" %></div>
                     <div class="text-center mt-3"><%= link_to 'Discussion fiscale',create_discussion_path("fiscale"), class:"btn btn-primary profile-button text-light" %></div>   
                <% end %>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Information utilisateur</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Nom</label><input type="text" class="form-control" placeholder="<%=current_user.name%>" value=""></div>
                    <div class="col-md-6"><label class="labels">Prénoms</label><input type="text" class="form-control" value="" placeholder="<%=current_user.surname%>"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Numéro de téléphone</label><input type="text" class="form-control" placeholder="<%=current_user.tel%>" value=""></div>
                    <div class="col-md-12"><label class="labels">Adresse E-mail</label><input type="text" class="form-control" placeholder="<%=current_user.email%>" value=""></div>
                    <div class="col-md-12"><label class="labels">Date de naissance</label><input type="text" class="form-control" placeholder="<%=current_user.birthday%>" value=""></div>
                    <div class="col-md-12"><label class="labels">Lieu de naissance</label><input type="text" class="form-control" placeholder="<%=current_user.lieu%>" value=""></div>
                    <div class="col-md-12"><label class="labels">Votre poste dans la Société</label><input type="text" class="form-control" placeholder="<%=current_user.position%>" value=""></div>
                </div>
               
                <div class="mt-5 text-center"><button class="btn btn-primary profile-button text-light" type="button">Mettre à jour</button></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                 <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Informations de la société</h4>
                </div>
                <div class="col-md-12"><label class="labels">Désignation</label><input type="text" class="form-control" placeholder="<%=current_user.pme.designation%>" value=""></div> <br>
                <div class="col-md-12"><label class="labels">Raison sociale</label><input type="text" class="form-control" placeholder="<%=current_user.pme.raison%>" value=""></div>

                   <div class="col-md-12"><label class="labels">Secteur d'activité</label><input type="text" class="form-control" placeholder="<%=current_user.pme.sector%>" value=""></div>
                <div class="col-md-12"><label class="labels">Status</label><input type="text" class="form-control" placeholder="<%=current_user.pme.status%>" value=""></div> 

                <div class="col-md-12"><label class="labels">Address E-mail</label><input type="text" class="form-control" placeholder="<%=current_user.pme.email%>" value=""></div> 
                
                <div class="col-md-12"><label class="labels">Numéro de Téléphone</label><input type="text" class="form-control" placeholder="<%=current_user.pme.contact%>" value=""></div> <br>
                <div class="mt-3 text-center"><button class="btn btn-primary profile-button text-light" type="button">Mettre à jour</button></div>

            </div>
        </div>
    </div>
</div>
</div>
</div>


<style>
body {
    background: rgb(99, 39, 120)
}

.form-control:focus {
    box-shadow: none;
    border-color: #BA68C8
}

.profile-button {
    background: rgb(99, 39, 120);
    box-shadow: none;
    border: none
}
.profile-button:hover {
    background: #682773
}
.profile-button:focus {
    background: #682773;
    box-shadow: none
}

.profile-button:active {
    background: #682773;
    box-shadow: none
}

.back:hover {
    color: #682773;
    cursor: pointer
}

.labels {
    font-size: 11px
}

.add-experience:hover {
    background: #BA68C8;
    color: #fff;
    cursor: pointer;
    border: solid 1px #BA68C8
}
</style>